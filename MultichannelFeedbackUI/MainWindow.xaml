<Window x:Class="MultichannelFeedbackUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultichannelFeedbackUI"
        mc:Ignorable="d"
        Title="THX Sptaial Audio Multichannel Feedback" MaxWidth="400" MaxHeight="100">
    <Grid Background="Black">
        <StackPanel>
            <StackPanel>
                <ComboBox x:Name="RenderEndpointSelector" Margin="2,2,2,2" SelectionChanged="RenderEndpointSelector_SelectionChanged"/>
            </StackPanel>
            <StackPanel MinHeight="40">
                <Label x:Name="StatusText" Content="{Binding StatusTextLabel}" Foreground="#FF17B30A" HorizontalContentAlignment="Center" BorderThickness="2,2,2,2" BorderBrush="#FF17B30A" MinHeight="40"/> 
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
